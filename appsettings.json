{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "VisionNextUIOperationsRoute": {
        "ClusterId": "VisionNextUIOperationsCluster",
        "Match": {
          "Path": "/VisionNextUIOperations/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/VisionNextUIOperations"
          }
        ]
      },
      "VisionNextFinanceRoute": {
        "ClusterId": "VisionNextFinanceCluster",
        "Match": {
          "Path": "/VisionNextFinance/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/VisionNextFinance"
          }
        ]
      },
      "VisionNextRoute": {
        "ClusterId": "VisionNextCluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "VisionNextUIOperationsCluster": {
        "Destinations": {
          "VisionNextUIOperations": {
            "Address": "https://localhost:44377/"
          }
        },
        "HttpClient": {
          "Timeout": "00:10:00"
        }
      },
      "VisionNextFinanceCluster": {
        "Destinations": {
          "VisionNextCustomer": {
            "Address": "https://localhost:44364/"
          }
        },
        "HttpClient": {
          "Timeout": "00:10:00"
        }
      },
      "VisionNextCluster": {
        "Destinations": {
          "VisionNext": {
            "Address": "https://batdev.visionnext.com.tr/"
          }
        },
        "HttpClient": {
          "Timeout": "00:10:00"
        }
      }
    }
  },
  "AllowedHosts": "*"
}
